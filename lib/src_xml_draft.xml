<source name="{name}" type="PointSource">
    <spectrum apply_edisp="false" type="PowerLaw">
            <parameter free="0" max="1e4" min="1e-4" name="Prefactor" scale="1e-12" value="1.0"/>
            <parameter free="0" max="10.0" min="0.0" name="Index" scale="-1.0" value="2.2"/>
            <parameter free="0" max="5e5" min="30" name="Scale" scale="1.0" value="1000."/>
    </spectrum>
    <spatialModel type="SkyDirFunction">
            <parameter free="0" max="360.0" min="-360.0" name="RA" scale="1.0" value="{ra}"/>
            <parameter free="0" max="90" min="-90" name="DEC" scale="1.0" value="{dec}"/>
    </spatialModel>
</source>
